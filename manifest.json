{
  "name": "Side by side browsing",
  "version": "0.2",
  "update_url": "https://localhost",
  "manifest_version": 2,
  "description": "Side by side browsing across browser windows.",
  "icons": { "16": "i16.png",
             "48": "i48.png",
             "128": "i128.png" },
  "browser_action": {
      "name": "Side by side browsing",
      "default_icon": "i16.png"
  },
  "background": {
      "scripts": [
          "background.js"
      ]
  },
  "permissions": [
      "tabs"
  ],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["client.js"]
  }]
}